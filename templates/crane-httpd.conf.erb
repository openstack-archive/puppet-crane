<VirtualHost <%= @host %>:<%= @port %>>
    WSGIScriptAlias / /usr/share/crane/crane.wsgi
    CustomLog /var/log/crane/crane-access.log combined
    ErrorLog /var/log/crane/crane-error.log
    <Location /crane>
        Require host localhost
    </Location>
    <Location /v2/>
        Require all granted
        XSendFile on
        XSendFilePath <%= @serve_content_dir_v2 %>
    </Location>
    <Location /v1/>
        Require all granted
        XSendFile on
        XSendFilePath <%= @serve_content_dir_v1 %>
    </Location>
    <Directory /usr/share/crane/>
        Require all granted
    </Directory>
</VirtualHost>
